.container
  .create-wrapper
    = form_with(model: @forum, local: true) do |f|
      %div
        = f.label :eyecatch, '画像を添付'
      %div
        = f.file_field :eyecatch
      %div
        = f.label :title, 'タイトル'
      %div
        = f.text_field :title, class: 'text'
      %div
        = f.label :content, '内容'
      %div
        = f.text_area :content, class: 'text'
      = f.submit '保存', class: 'btn-primary'
